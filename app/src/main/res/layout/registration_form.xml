<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.intodarkness.vitworkshop.RegistrationForm">

    <TextView
        android:id="@+id/roll_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/workshopNameLabel"
        android:layout_marginTop="26dp"
        android:text="Roll Number"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <EditText
        android:id="@+id/edit_rno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/roll_no"
        android:layout_alignEnd="@+id/workshopName"
        android:layout_alignRight="@+id/workshopName"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_toRightOf="@+id/roll_no"
        android:singleLine="true"
        android:hint="Eg: 14XXX0000" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/roll_no"
        android:layout_marginTop="26dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name"
        android:layout_alignLeft="@+id/edit_rno"
        android:layout_alignStart="@+id/edit_rno"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/regButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="88dp"
        android:layout_toEndOf="@+id/workshopNameLabel"
        android:layout_toRightOf="@+id/workshopNameLabel"
        android:onClick="addToFirebase"
        android:text="Register" />

    <TextView
        android:id="@+id/schoolNamelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="School name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/schoolName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/schoolNamelabel"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/workshopNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/schoolNamelabel"
        android:layout_marginTop="26dp"
        android:text="Workshop name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/workshopName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/schoolName"
        android:layout_alignStart="@+id/schoolName"
        android:layout_alignTop="@+id/workshopNameLabel"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
